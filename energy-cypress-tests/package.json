{
  "name": "energy-cypress-tests",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "cypress:open": "cypress open",
    "cypress:run": "cypress run --reporter mochawesome --reporter-options reportDir=cypress/reports,overwrite=false,html=true,json=true",
    "merge:reports": "mochawesome-merge cypress/reports/*.json | marge --reportDir cypress/reports/final --inline",
    "coverage:report": "nyc report --reporter=lcov",
    "coverage: test": "npm run cypress:run && npm run coverage:report",
    "cypress:run:allure": "cypress run --env allure=true --browser chrome --headless",
    "allure:generate": "npm run allure:generate",
    "allure:open": "allure open allure-report"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.11.0",
    "cypress": "^12.9.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.2.0",
    "nyc": "^15.1.0"
  },
  "nyc": {
    "include": [
      ".next/**/*.js"
    ],
    "exclude": [
      "**/*.test.js",
      "cypress/**"
    ],
    "reporter": [
      "text",
      "lcov",
      "html"
    ],
    "all": true
  },
  "dependencies": {
    "@cypress/webpack-preprocessor": "^7.0.0",
    "@shelex/cypress-allure-plugin": "^2.41.2"
  }
}
